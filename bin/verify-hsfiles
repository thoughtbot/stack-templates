#!/bin/sh

set -e

if [ -z "$1" ]; then
  echo "Usage: verify TEMPLATE"
  exit 1;
fi

template="$(pwd)/$1"

die() {
  echo "$1"
  exit 1
}

cd /tmp
rm -rf stack-template-test
stack new stack-template-test "$template" --force --solver || die "Failed: stack new"
cd stack-template-test
stack setup || die "Failed: stack setup"
stack build || die "Failed: stack build"
